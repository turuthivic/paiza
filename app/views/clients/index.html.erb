<div class="container" >
  <h1>All Clients</h1>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date of Birth</th>
        <th>Gender</th>
      </tr>
    </thead>
    <tbody>
      <% count = 1 %>
      <% @clients.each do |client| %>
        <%= cache client do %>
          <tr>
            <% unless count > @clients.count %>
                <th scope="row"><%= count %></th>
                <td><%= client['firstName'] %></td>
                <td><%= client['lastName'] %></td>
                <td><%= client['birthDate'] %></td>
                <td><%= client['gender'] %></td>
                <td><%= client['addresses'] %></td>
              <% count +=1 %>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>  
</div>

